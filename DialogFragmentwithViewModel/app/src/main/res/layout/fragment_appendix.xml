<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.github.katatoshi.android.dialogfragmentwithviewmodel.ui.appendix.AppendixViewModel.Converter" />

        <variable
            name="viewModel"
            type="io.github.katatoshi.android.dialogfragmentwithviewmodel.ui.appendix.AppendixViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

        <Button
            android:id="@+id/incrementButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="@{() -> viewModel.incrementCounter()}"
            android:text="Increment"
            app:layout_constraintEnd_toEndOf="@+id/titleText"
            app:layout_constraintStart_toStartOf="@+id/titleText"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="@{() -> viewModel.tryToResetCounter()}"
            android:text="Reset"
            app:layout_constraintEnd_toEndOf="@+id/incrementButton"
            app:layout_constraintStart_toStartOf="@+id/incrementButton"
            app:layout_constraintTop_toBottomOf="@+id/incrementButton" />

        <Button
            android:id="@+id/navigateToMainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="@{() -> viewModel.onNavigateToMain()}"
            android:text="Main Fragment"
            app:layout_constraintEnd_toEndOf="@+id/resetButton"
            app:layout_constraintStart_toStartOf="@+id/resetButton"
            app:layout_constraintTop_toBottomOf="@+id/resetButton" />

        <TextView
            android:id="@+id/counterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{Converter.counterToString(viewModel.counter)}"
            app:layout_constraintBaseline_toBaselineOf="@+id/titleText"
            app:layout_constraintStart_toEndOf="@+id/titleText"
            tools:text="0" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appendix Fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
